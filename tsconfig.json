{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2015",
    "downlevelIteration": true,
    "jsx": "react-jsx", // si tu es sur React 17+
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
