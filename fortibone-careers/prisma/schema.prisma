generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id           String   @id @default(uuid())
  title        String
  department   String
  location     String
  type         String
  description  String
  requirements String   // Stored as text, split by newline in frontend
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  applications Application[]
}

model Application {
  id        String   @id @default(uuid())
  jobId     String
  job       Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  name      String
  email     String
  phone     String
  cvLink    String
  message   String
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(USER)
}

enum Role {
  USER
  ADMIN
}
